# Papibot P2P Configuration
# Copy this file to .env and configure your values

# === REQUIRED CONFIGURATION ===

# WhatsApp Group ID for P2P monitoring
# Format: 1203xxxxxxxxx@g.us (get this from group info)
GROUP_ID=

# === OPTIONAL CONFIGURATION ===

# WhatsApp Authentication State Directory
# Default: papibot_auth_state
WA_AUTH_STATE=papibot_auth_state

# Auto-restart on failures
# Default: true
AUTO_RESTART=true

# Maximum restart attempts
# Default: 5
MAX_RESTARTS=5

# Delay between restart attempts (milliseconds)
# Default: 30000 (30 seconds)
RESTART_DELAY=30000

# Logging level (error, warn, info, debug)
# Default: info
LOG_LEVEL=info

# === EXISTING RECO BOT CONFIGURATION ===
# These are used by the existing BOTTY system

# OpenAI API Key for response analysis
OPENAI_API_KEY=

# RECO WhatsApp number for testing
RECO_WHATSAPP_NUMBER=+593994170801

# Test timeout in milliseconds
TEST_TIMEOUT_MS=30000

# Analysis model for OpenAI
ANALYSIS_MODEL=gpt-4.1